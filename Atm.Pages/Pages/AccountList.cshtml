@page
@model Atm.Pages.Pages.AccountListModel
@{
}

Number of accounts: @Model.Accounts.Count();

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Account number</th>
            <th>Balance</th>
            <th>&nbsp;</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var account in Model.Accounts)
        {
            <tr>
                <td>@account.Number</td>
                <td>@string.Format("{0:0.00}", account.Balance)</td>
                <td>&nbsp;</td>
            </tr>
        }
    </tbody>
</table>
